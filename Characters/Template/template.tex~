% Doing some Math
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\begin{sagesilent}

	acTotal = 10 + armorBonus + shieldBonus + naturalArmor + miscArmor + dexMod
	cmb = bab + strMod
	cmd = 10 + strMod + dexMod

\end{sagesilent}

