\newcommand{\armOneName}{Hide}
\newcommand{\armTwoName}{Shield}
\newcommand{\armOneBonus}{+4 Armor}
\newcommand{\armTwoBonus}{+2 Shield}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Define Weapon
% Some of the weapons feats are listed
% set = 1 if you have it, else leave = 0
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\begin{sagesilent}

	wp1AttBonus = 0
	wp1DamBonus = strMod
	wp1Range = 0
	wp1CritMod = 2
	
	wp2AttBonus = 1
	wp2DamBonus = intMod
	wp2Range = 20
	wp2CritMod = 2 

\end{sagesilent}

\newcommand{\wpOneName}{Club}
\newcommand{\wpTwoName}{Bomb}
\newcommand{\wpOneDam}{1d6}
\newcommand{\wpTwoDam}{5d6}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% List class skills, feats and racial traits
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\feats}{
	\begin{itemize}
		\item \textbf{Shielding Sap:} Increase the AC bonus to \textsc{Protective Sap}
				by 2
		\item \textbf{Throw Anything:} +1 on attack rolls for splash weapons.
		\item \textbf{Brew Potion:} Can use craft checks to brew potions.
		\item \textbf{FEAT 1:}
		\item \textbf{FEAT 2:}
		\item \textbf{FEAT 3:}
		\item \textbf{FEAT 4:}
		\item \textbf{FEAT 5:}
	\end{itemize}
}

\newcommand{\racetr}{
	\begin{itemize}
		\item \textbf{Protective Sap:} when HP is reduced to 25\%, AC increases by 4
		\item \textbf{Rooted Foot:} Can stand up from prone as a swift action
		\item \textbf{Sun Heal:} Once per day, can use sunlight to regenerate 2/level HP
				and gain a full meal of nourishment
		\item \textbf{Humanoid Plant:} +2 racial bonus to saving throws against mind-affecting 
				effects, paralysis, poison, polymorph and stun. Also gains immunity to sleep.
	\end{itemize}
}

\newcommand{\classab}{
	\paragraph{Druid}
	\begin{itemize}
		\item \textbf{Nature Bond:} Plant Domain
		\item \textbf{Nature Sense:} +2 bonus to Knowledge(Nature) and Survival
		\item \textbf{Woodland Stride:} Can move through underbrush without hinderance 
		\item \textbf{Resist Nature's Lure:} +4 to saving throws against spell-like
				and supernatural abilities of Fey
		\item \textbf{Wild Shape:} (4/day) Counts as Elemental Body III, Beast Shape III or Plant Shape II
		\item \textbf{Venom Immunity:} Immunity to all poisons
	\end{itemize}
	\paragraph{Alchemist}
	\begin{itemize}
		\item \textbf{Bombs:} (\(\sage{10+intMod}\)/day) 20ft range. 5d6 + \(\sage{intMod}\), splash is 
				mininum damage. DC:\(\sage{10 + (characterLevel/2) + intMod}\) to avoid spash damage. 
		\item \textbf{Mutagen:} (1/day) Gives +2 Natural AC, +4 to physical stat, and -2 to asociated 
				mental stat for 10 min/level.
		\item \textbf{Swift Alchemy:} Can create alchemical items in half the normal time.
		\item \textbf{Swift Poison:} Can apply poison as a swift action.
		\item \textbf{Alchemical Simulacrum:} Creates a \textit{Lesser Simulacrum} 
		\item \textbf{Doppleganger Simulacrum:} Create a doppleganger.  Can posses the doppleganger as a 
				standard action.  Unused bodies, including the original, do not rot.
		\item \textbf{Infusions:} Can give extracts to others.
		\item \textbf{Fast Bombs:} Can create enough bombs to use for a full round attack
		\item \textbf{Tumor Familiar:} KITTY!!!!!!! 
	\end{itemize}
}

\newcommand{\spells}{
	\paragraph{Druid spells}
	\begin{tabularx}{\textwidth}{|X|X|X|X|}
		\hline
		Level & Spells per day & Spells Known & Spells Prepared \\
		\hline
		0 & -- &  &  Spell1, Spell2, Spell3 \\
		\hline
		1 & 4 & -- & -- \\
		\hline
	\end{tabularx}
	
	\paragraph{Extracts}
	\begin{tabularx}{\textwidth}{|X|X|X|X|}
		\hline
		Level & Spells per day & Spells Known & Spells Prepared \\
		\hline
		
}
	
